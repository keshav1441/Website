@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1 class="display-4 text-center mt-5">Welcome to Our Animal Kingdom</h1>
    <p class="lead text-center">
        Discover the beauty of nature with a variety of animals from all around the world.
    </p>
    <p class="text-center">
        Explore our gallery of wildlife images, learn fascinating facts about the animal kingdom, and dive into the wonders of nature.
    </p>
    <p class="text-center">
        From majestic lions to playful dolphins, there's something for every animal lover here.
    </p>

    <!-- Bootstrap Carousel -->
    <div id="animalCarousel" class="carousel slide mt-5" data-bs-ride="carousel" data-bs-interval="3000">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/animals/lion.jpg" class="d-block w-100" alt="Lion">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Lion</h5>
                    <p>The king of the jungle.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/animals/elephant.jpg" class="d-block w-100" alt="Elephant">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Elephant</h5>
                    <p>The largest land animal.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/animals/tiger.jpg" class="d-block w-100" alt="Tiger">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Tiger</h5>
                    <p>A fierce and powerful predator.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/animals/dolphin.jpg" class="d-block w-100" alt="Dolphin">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Dolphin</h5>
                    <p>The playful and intelligent sea creature.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/animals/panda.jpg" class="d-block w-100" alt="Panda">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Panda</h5>
                    <p>The adorable bamboo eater.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#animalCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#animalCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
